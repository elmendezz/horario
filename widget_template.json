{
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "${currentTitle}",
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "${currentSubtitle}",
          "size": "Large",
          "wrap": true,
          "spacing": "None"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "${nextTitle}",
      "weight": "Bolder",
      "spacing": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "${nextSubtitle}",
      "wrap": true,
      "spacing": "None"
    }
  ]
}